<header class="navbar navbar-inverse navbar-fixed-top" id="app-header">
  <div class="navbar-inner">

    <div class="container">
      <%= link_to 'TicTraking', root_path, class: 'brand' %>

      <div class="nav-collapse collapse">
        <ul class="nav">

          <% if user_signed_in? %>
            <li class="dropdown">
              <%= link_to '#', { class: 'brand dropdown-toggle', 'data-toggle' => 'dropdown' } do %>
                Projects <b class="caret"></b>
              <% end %>

               <ul class="dropdown-menu">
                 <li><%= link_to 'New Project', new_project_path%></li>
                 <li class="divider"></li>
                 <li class="nav-header">Last projects</li>
                    <% @latests_projects.each do |project| %>
                      <li><%= link_to project.name, project_path(project) %></li>
                    <% end %>
                 <li class="divider"></li>
                 <li><%= link_to 'All Projects', projects_path%></li>
               </ul>
            </li>
          <% end %>
        </ul>
      </div>

      <ul class="nav pull-right">
        <% if user_signed_in? %>
          <li><%= link_to '<i class="icon-circle-arrow-left"></i> Sign out'.html_safe,
            destroy_user_session_path, { method: :delete } %></li>
          <li><%= link_to current_user.email,
            edit_user_registration_path %></li>
          <li class="app-profile-image">
            <%= image_tag avatar_url(current_user), alt: current_user.name,
            size: '40x40', class: 'img-circle' %></li>
        <% else %>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
        <% end %>
      </ul>
  </div>
  </div>
</header>