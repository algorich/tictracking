<!DOCTYPE html>

<html>

<head>
  <title><%= content_for?(:title) ? yield(:title) + ' - TicTracking' : 'TicTracking' %></title>

  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
  <![endif]-->

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>

<body>

  <!-- HEADER BEGIN -->
  <%= render 'layouts/top_navbar' %>
  <!-- HEADER END -->


  <!-- CONTENT BEGIN -->
  <section id="app-content" class="container <%= yield :page_id %>">
    <div class="row-fluid">

      <div class="<%= yield(:sidebar).blank? ? 'span12'.html_safe : 'span8'.html_safe %>">
        <%= flash_message %>

        <%= yield %>
      </div>

      <% unless (yield :sidebar).blank? %>
        <aside class="span4 well">
          <%= yield :sidebar %>
        </aside>
      <% end %>

    </div>
  </section>
  <!-- CONTENT END -->

  <!-- FOOTER BEGIN -->
  <footer id="app-content" class="text-center">
    <p>&copy 2013, <a href="http://algorich.com" target="_blank">Algorich</a></p>
  </footer>
  <!-- FOOTER END -->


  <%= javascript_include_tag 'application' %>
  <% if user_signed_in? %>
    <script type="text/javascript" defer="defer">
      <%= render(partial: 'site/start_countdown', formats: [:js], handlers: [:erb] )  %>
    </script>
  <% end %>
</body>

</html>
