<!DOCTYPE html>

<html>

<head>
  <title>TicTracking - <%= yield :page_title %></title>

  <meta charset="utf-8" />

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application',  defer: 'defer' %>
  <%= csrf_meta_tags %>
</head>

<body>

  <!-- HEADER BEGIN -->
  <header id="app-header">
    <% if user_signed_in? %>
      <%= image_tag avatar_url(current_user) %>
      <%= link_to 'Sign out', destroy_user_session_path, {method: :delete} %>
      <%= link_to current_user.email, edit_user_registration_path %>
      <%= link_to 'Dashboard', dashboard_path %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path %>
    <% end %>
  </header>
  <!-- HEADER END -->

  <!-- FLASH MESSAGE BEGIN -->
  <% flash.each do |type, message| %>
    <p class="<%= type %>"><%= message %></p>
  <% end %>
  <!-- FLASH MESSAGE END -->

  <!-- CONTENT BEGIN -->
  <section id="app-content">
    <%= yield %>
  </section>
  <!-- CONTENT END -->

  <!-- FOOTER BEGIN -->
  <footer id="app-content">
    <p>&copy 2013, <a href="http://algorich.com" target="_blank">Algorich</a></p>
  </footer>
  <!-- FOOTER END -->

</body>

</html>
