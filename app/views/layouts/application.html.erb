<!DOCTYPE html>

<html>

<head>
  <title>TicTracking - <%= yield :page_title %></title>

  <meta charset="utf-8" />

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>

<body>

  <!-- HEADER BEGIN -->
  <%= render 'layouts/top_navbar' %>
  <!-- HEADER END -->


  <!-- CONTENT BEGIN -->
  <section id="app-content" class="container <%= yield :page_id %>">
    <div class="row-fluid">

      <div class="<%= yield(:sidebar).blank? ? 'span12'.html_safe : 'span8'.html_safe %>">
        <%= flash_message %>

        <%= yield %>
      </div>

      <% unless (yield :sidebar).blank? %>
        <aside class="span4 well">
          <%= yield :sidebar %>
        </aside>
      <% end %>

    </div>
  </section>
  <!-- CONTENT END -->

  <!-- FOOTER BEGIN -->
  <footer id="app-content" class="text-center">
    <p>&copy 2013, <a href="http://algorich.com" target="_blank">Algorich</a></p>
  </footer>
  <!-- FOOTER END -->


  <%= javascript_include_tag 'application' %>
  <script type="text/javascript" defer="defer">
    <%= render partial: 'site/start_countdown', formats: :js %>
  </script>
</body>

</html>
