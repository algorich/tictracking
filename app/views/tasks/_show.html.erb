<ul data-id="<%= task.id %>">
  <li>
    <div class="span">
      <div class="row-fluid">
        <div class="span5">
          <span class="lead"><%= task.name %></span>
          <%= simple_form_for [task, worktime] do |w| %>
            <%= w.input :task_id, as: :hidden, input_html: { value: task.id} %>
            <%= w.submit 'Continue' %>
            <%= w.submit 'Stop' %>
          <% end %>
        </div>
      </div>
    </div>

  </li>


    <% task.worktimes.each do |worktime|  %>
      <ul class="inline">
        <li><%= worktime.begin %></li>
        <% if worktime.end.present? %>
          <li><%= worktime.end %></li>
        <% end %>
        <li><%= link_to 'Edit', edit_task_worktime_path(task, worktime) %></li>
        <li><%= link_to 'Destroy', task_worktime_path(task, worktime),
         {method: :delete} %></li>
      </ul>
    <% end %>

  <% if can? :update, task %>
    <li><%= link_to 'Edit', edit_task_path(task) %></li>
  <% end %>
  <% if can? :destroy, task %>
    <li><%= link_to 'Delete', task_path(task), {method: :delete} %></li>
  <% end %>
  </ul>