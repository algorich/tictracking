<% if @task.errors.empty? %>
  $('#app-tasks').prepend("<div id=\"app-task\" data-id=\"<%= @task.id %>\"> <%= escape_javascript(render 'show', task: @task ) %> </div></br>");
  $('#task_name').val('');
<% else %>
  $('.alert-error').removeClass('hide').find('span').html("Task can't be created");
<% end %>

