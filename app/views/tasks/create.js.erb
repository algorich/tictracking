<% if @task.errors.empty? %>
  $('#app-tasks').prepend("<%= escape_javascript(render 'show', task: @task ) %>");
  $('#task_name').val('');
<% else %>
  $('#task_name').val('');
  app_show_flash_message("<%= params[:message][:type] %>",
    "<%= params[:message][:text].try(:html_safe) %>");
<% end %>

<%= render partial: 'site/start_countdown' %>
$('#button-task').button('reset');