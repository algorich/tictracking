<section class="span5  offset3 well">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#edit" data-toggle="tab">Edit User</a></li>
    <li><a href="#cancel" data-toggle="tab">Cancel account</a></li>
  </ul>

  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="edit">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: { method: :put }, defaults: { input_html: {class: "span12"} }) do |f| %>

        <h2>Edit <%= resource_name.to_s.humanize %></h2><hr>

        <%= f.input :name,
          label:false,
          placeholder: 'Your Name' %>

        <%= f.input :email,
          label:  false,
          placeholder: 'Your Email',
          input_html: { required: true } %>

        <%= f.input :password,
          label:  false,
          placeholder: "Leave blank if you don't want to change it" %>

        <%= f.input :password_confirmation,
          label:  false,
          placeholder: 'Confirm your password' %>

        <%= f.input :current_password,
          label:  false,
          placeholder: 'We need your current password to confirm your changes',
          input_html: { required: true } %>

        <div class="actions">
          <%= f.button :submit, 'Update', class:  'btn btn-info btn-block' %>
        </div>
      <% end %>
    </div>

    <div class="tab-pane fade" id="cancel">
      <h3>Unhappy?</h3>

      <%= button_to "Cancel my account!", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn btn-danger' %>

      <%= link_to "Back", :back %>
    </div>
  </div>
</section>