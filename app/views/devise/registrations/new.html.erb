<%= simple_form_for(resource, as:  resource_name, url:  registration_path(resource_name),
  html:  { class:  'span5 offset3 well' }) do |f| %>

  <h2>Sign up</h2><hr>
  <%= flash_message %>
  <%= f.input :email,
    label:  false,
    autofocus:  true,
    placeholder: 'Email',
    input_html:  { class:  'span12' } %>

  <%= f.input :password,
    label:  false,
    placeholder: 'Password',
    input_html:  { class:  'span12' } %>

  <%= f.input :password_confirmation,
    label:  false,
    placeholder: 'Password confirmation',
    input_html:  { class:  'span12' } %>

  <div class="actions">
    <%= f.button :submit, 'Sign up', class:  'btn btn-info btn-block' %>
    <%= render partial:  "devise/shared/links" %>
  </div>
<% end %>
