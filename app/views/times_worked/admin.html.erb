<% if !@projects.empty? %>
  <div id="projects">
    <% @projects.each do |project| %>
      <div id="project-<%= project.id %>" class="accordion">
        <h3 class="accordion-header"><%= project.name %></h3>
        <div class="accordion-content accordion-group">
          <% project.users.each do |user| %>
            <div id="user-<%= user.id %>" class="accordion">
              <h4 class="accordion-header"><%= user.name || user.email %></h4>
              <div class="accordion-content">
                <% project.tasks_times(user).each do |name, time| %>
                    <div>
                      <span><%= name %></span>
                      <span><%= to_minutes time %></span>
                    </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  Sorry. You do not have projects under your vigilance.
<% end %>