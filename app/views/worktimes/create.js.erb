var $task = $('div[data-id="<%= @task.id %>"]');

$task.replaceWith("<%= escape_javascript(render 'tasks/show', task: @task, worktime: @worktime ) %>");

app_show_flash_message("<%= params[:message][:type] %>",
  "<%= params[:message][:text].try(:html_safe) %>");

$('div[data-id="<%= @task.id.to_s %>"] a[data-method="post"]').hide();
$('div[data-id="<%= @task.id %>"] a[data-method="put"]').show();

// start countdown
<%= render partial: 'site/start_countdown' %>
