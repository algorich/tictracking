<b>Admins (If the check box was checked, user is an admin):</b>

<table class="table table-striped" id="team-table">
    <tbody>
      <% @project.users.each do |user| %>
        <tr id="user_<%= user.id %>">
          <td class="user_info span4">
            <%= image_tag avatar_url(user), alt: user.name,
              size: '30x30', class: 'img-rounded pull-left' %>
            <span class="text-account in-team">
              <strong><%= user.email %></strong><br />
              <small><%= user.try(:name) %></small>
            </span>
          </td>

          <td class="span4">
            <input type='checkbox' id='user-<%= user.id %>' class='set_admin'
              data-user-id='<%= user.id %>' data-url='<%= change_admin_project_path(@project) %>'
              <%= 'checked' if user.admin?(@project) %>
              <%= 'disabled' if !edit_page %>>
          </td>

          <% if edit_page %>
            <td class="span4">
              <% membership = Membership.where(user_id: user, project_id: @project).first %>
              <%= link_to membership, method: :delete, remote: true,
                data: { confirm: 'Are you sure?' }, class: [:btn, 'btn-danger'] do %>
                  <i class="icon-trash"></i> Remove
              <% end %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
</table>