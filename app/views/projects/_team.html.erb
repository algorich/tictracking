<% is_admin = current_user.admin?(@project) %>

<b>Admins (If the check box was checked, user is an admin):</b><br>
<% project.users.each do |user| %>
  <input type='checkbox' id='user-<%= user.id %>' class='set_admin'
    value='<%= user.id %>' data-project='<%= @project.id %>'
    <%= 'checked' if user.admin?(project) %>
    <%= 'disabled' if !is_admin %>> <%= user.email %>
    <% if is_admin %>
      <% membership = Membership.where(user_id: user, project_id: project).first %>
      <%= link_to 'Remove', membership, method: :delete, remote: true,
        data: { confirm: 'Are you sure?' } %>
    <% end %>
    <br>
<% end %>