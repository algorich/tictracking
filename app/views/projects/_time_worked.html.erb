<div id="user-<%= user.id %>">
  <tr class="info">
    <td><%= user_info(user) %></td>
    <td><h5>
      <%= precise_distance_of_time_in_words(0, tasks_info[:time_worked_at_all]) %>
    </h5></td>
  </tr>

  <div id="tasks">
    <% tasks_info[:tasks].each do |task| %>
      <tr id="task-<%= task[:id] %>">
        <td><%= task[:name] %></td>
        <td><%= precise_distance_of_time_in_words(0, task[:time]) %></td>
      </tr>
    <% end %>
  </div>
</div>