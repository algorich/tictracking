<div class="row-fluid">
  <h1><%= @project.name %></h1>
    <div class="btn-group pull-right">
      <%= link_to '<i class="icon-edit"></i> Edit'.html_safe,
       edit_project_path(@project), class: "btn"%>
      <%= link_to '<i class="icon-remove"></i> Destroy'.html_safe,
       project_path(@project), {method: :delete, class: "btn btn-danger"} %>
    </div>
</div>

<div class="row-fluid">
  <%= simple_form_for @task do |f| %>
    <div class="input-append">
      <%= f.input_field :name, autofocus: true, placeholder: 'New task' %>
      <%= f.submit 'Start', class: 'btn app-add' %>
    </div>
    <%= f.input :project_id, as: :hidden, input_html: { value: @project.id } %>
  <% end %>
</div>

<% @tasks.each do |t| %>
  <%= render 'tasks/show', task: t, worktime: @worktime %>
<% end %>
<%= link_to 'Team', team_project_path(@project) %>
