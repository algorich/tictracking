<%= content_for :title do @project.name end %>
<%= content_for :page_id do 'project_page' end %>

<div class="row-fluid">

  <h1 class="pull-left" ><%= @project.name %></h1>

  <div class="app-header-actions btn-group pull-right">
    <%= link_to report_project_path(@project), class: :btn do %>
      <i class="icon-time"></i> Time Worked
    <% end %>
    <%= link_to team_project_path(@project), class: :btn do %>
      <i class="icon-user"></i> Team
    <% end %>
    <% if current_user.admin? @project %>
      <%= link_to edit_project_path(@project), class: :btn do %>
        <i class="icon-wrench"></i> Settings
      <% end %>
    <% end %>
  </div>
</div>

<% if can? :manage, @task %>
  <%= simple_form_for @task, remote: true do |f| %>
    <div class="input-append app-new-task">
      <%= f.input_field :name, autofocus: true, placeholder: 'New task' %>
      <%= f.submit 'Start', class: 'btn app-add', id: "button-task" %>
    </div>
    <%= f.input :project_id, as: :hidden, input_html: { value: @project.id } %>
  <% end %>
<% end %>



<div id="app-tasks">
  <% @tasks.each do |t| %>
    <%= render 'tasks/show', task: t %>
  <% end %>
</div>